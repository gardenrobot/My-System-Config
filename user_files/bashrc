# If not running interactively, don't do anything
case $- in
	*i*) ;;
		*) return;;
esac

# don't put duplicate lines or lines starting with space in the history.
# See bash(1) for more options
HISTCONTROL=ignoreboth

# append to the history file, don't overwrite it
shopt -s histappend

# for setting history length see HISTSIZE and HISTFILESIZE in bash(1)
HISTSIZE=1000
HISTFILESIZE=2000

# Disable flow control so Ctrl-s doesn't lock up bash
stty -ixon

# check the window size after each command and, if necessary,
# update the values of LINES and COLUMNS.
shopt -s checkwinsize

# make less more friendly for non-text input files, see lesspipe(1)
[ -x /usr/bin/lesspipe ] && eval "$(SHELL=/bin/sh lesspipe)"

# Set the PS1 prompt options.
# Set the color.
machine=""
[ -r ~/.bashrc_machine ] && . ~/.bashrc_machine

if [ "$machine" == "corriander" ]; then
	prompt_foreground='\[\033[38;5;4m\]'	# blue
elif [ "$machine" == "pepper" ]; then
	prompt_foreground='\[\033[38;5;2m\]'	# green
elif [ "$machine" == "ginger" ]; then
	prompt_foreground='\[\033[38;5;11m\]'	# yellow
elif [ "$machine" == "cilantro" ]; then
	prompt_foreground='\[\033[38;5;6m\]'	# teal
elif [ "$machine" == "work" ]; then
	prompt_foreground='\[\033[38;5;1m\]'	# red
else
	prompt_foreground='' # default to white
fi
# Set the background if root.
if [ $(whoami) == "root" ]; then
	prompt_background='\[\033[48;5;15m\]'
	prompt_background_escape='\[$(tput sgr0)\]'
else
	prompt_background=''
	prompt_background_escape=''
fi
# Set whether to use the emoji or the emoticon
if [ $no_emoji ]; then
	prompt_char='$'
else
	prompt_char='ðŸ˜Ž'
fi

# Set the prompt
PS1="\[\033[38;5;128m\]\u\[\033[38;5;15m\] \w ${prompt_foreground}${prompt_background}${prompt_char}\[\033[38;5;15m\] ${prompt_background_escape}\[$(tput sgr0)\]"

# Aliases
[ -r ~/.bash_aliases ] && . ~/.bash_aliases

# Machine Specific bashrc
[ -r ~/.bashrc_local ] && . ~/.bashrc_local

# Enable bash completion
if ! shopt -oq posix; then
	if [ -f /usr/share/bash-completion/bash_completion ]; then
		. /usr/share/bash-completion/bash_completion
	elif [ -f /etc/bash_completion ]; then
		. /etc/bash_completion
	fi
fi

# Print cute heart
HEARTLINE01='_â–‘â–’â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ_______________'
HEARTLINE02='â–‘â–ˆâ–ˆâ–“â–’_â–‘â–’â–“â–ˆâ–ˆ______________'
HEARTLINE03='â–ˆâ–ˆâ–“â–’â–‘__â–‘â–’â–“â–ˆâ–ˆ___â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ____'
HEARTLINE04='â–ˆâ–ˆâ–“â–’â–‘____â–‘â–“â–ˆâ–ˆâ–ˆâ–“__â–‘â–’â–“â–ˆâ–ˆ___'
HEARTLINE05='â–ˆâ–ˆâ–“â–’â–‘___â–‘â–“â–ˆâ–ˆâ–“_____â–‘â–’â–“â–ˆâ–ˆ__'
HEARTLINE06='â–ˆâ–ˆâ–“â–’â–‘_______________â–‘â–’â–“â–ˆâ–ˆ'
HEARTLINE07='_â–ˆâ–ˆâ–“â–’â–‘______________â–‘â–’â–“â–ˆâ–ˆ'
HEARTLINE08='__â–ˆâ–ˆâ–“â–’â–‘____________â–‘â–’â–“â–ˆâ–ˆ_'
HEARTLINE09='___â–ˆâ–ˆâ–“â–’â–‘__________â–‘â–’â–“â–ˆâ–ˆ__'
HEARTLINE10='____â–ˆâ–ˆâ–“â–’â–‘________â–‘â–’â–“â–ˆâ–ˆ___'
HEARTLINE11='_____â–ˆâ–ˆâ–“â–’â–‘_____â–‘â–’â–“â–ˆâ–ˆ_____'
HEARTLINE12='______â–ˆâ–ˆâ–“â–’â–‘__â–‘â–’â–“â–ˆâ–ˆ_______'
HEARTLINE13='_______â–ˆâ–“â–’â–‘â–‘â–’â–“â–ˆâ–ˆ_________'
HEARTLINE14='_________â–‘â–’â–“â–ˆâ–ˆ___________'
HEARTLINE15='_______â–‘â–’â–“â–ˆâ–ˆ_____________'
HEARTLINE16='_____â–‘â–’â–“â–ˆâ–ˆ_______________'
BLK='\\033[0;30m'
BRN='\\033[0;90m' # This is color code for light black. Set to brown in terminal settings.
RED='\\033[0;31m'
ORA='\\033[38;5;208m'
YEL='\\033[38;5;226m'
GRN='\\033[0;32m'
BLU='\\033[0;34m'
PUR='\\033[0;35m'
LBL='\\033[38;5;32m'
PNK='\\033[38;5;13m'
WHT='\\033[1;37m'
NC='\\033[0m'
print_heart() {
	TMP=$(printf "${1}" | sed "s/\(__*\)/$3\1/g" | sed "s/\([â–‘â–’â–“â–ˆ][â–‘â–’â–“â–ˆ]*\)/$2\1/g")
	echo -e "$TMP"
	echo -n "$(tput sgr0)"
}
print_heart "${HEARTLINE01}" "${BLK}" "${LBL}"
print_heart "${HEARTLINE02}" "${BLK}" "${LBL}"
print_heart "${HEARTLINE03}" "${BRN}" "${LBL}"
print_heart "${HEARTLINE04}" "${BRN}" "${PNK}"
print_heart "${HEARTLINE05}" "${RED}" "${PNK}"
print_heart "${HEARTLINE06}" "${RED}" "${PNK}"
print_heart "${HEARTLINE07}" "${ORA}" "${WHT}"
print_heart "${HEARTLINE08}" "${ORA}" "${WHT}"
print_heart "${HEARTLINE09}" "${YEL}" "${WHT}"
print_heart "${HEARTLINE10}" "${YEL}" "${WHT}"
print_heart "${HEARTLINE11}" "${GRN}" "${PNK}"
print_heart "${HEARTLINE12}" "${GRN}" "${PNK}"
print_heart "${HEARTLINE13}" "${BLU}" "${PNK}"
print_heart "${HEARTLINE14}" "${BLU}" "${LBL}"
print_heart "${HEARTLINE15}" "${PUR}" "${LBL}"
print_heart "${HEARTLINE16}" "${PUR}" "${LBL}"

# silence this warning on Mac
export BASH_SILENCE_DEPRECATION_WARNING=1
