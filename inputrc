# FUCKING BELLS
set bell-style none

# Holding control fast forward
"\e[1;5C": forward-word
"\e[1;5D": backward-word
"\e[5C": forward-word
"\e[5D": backward-word
"\e\e[C": forward-word
"\e\e[D": backward-word

# Shortcut to bring up man page
"\eh": "\C-a\eb\ed\C-y\e#man \C-y\C-m\C-p\C-p\C-a\C-d\C-e"

# Autocomplete link names with trailing slash /
set mark-symlinked-directories on
